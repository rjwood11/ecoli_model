sites_millcreek = c("03431060", "03430550", "03431083","03431000")
sites_harpeth = c("0343233905", "03432400", "034324146","03432800", "03434500", "03433500","03432350")
sites_richland = c("03431700", "03431655")
parameter_codes = c("00060", "00300")


